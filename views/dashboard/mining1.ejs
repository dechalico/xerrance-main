<%- include('../partials/header') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Mining History</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Mining</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
        <div class="col-md-12">
					<div class="card card-primary card-outline">
						<!-- /.card-header -->
						<div class="card-body table-responsive p-0">
							<table class="table table-hover text-nowrap">
								<thead>
									<tr>
										<th>Date Created</th>
										<th>Downline</th>
										<th>Referral Commission</th>
										<th>Pairing Commission</th>
										<th>Mining Income</th>
										<th>Network Bonus</th>
										<th>Gross</th>
									</tr>
								</thead>
								<tbody>
									<% for(i=0; i < data.minings.length; i++) { %>
										<% const code = data.minings[i]; %> 
										<% const dateCreated = new Date(code.dateCreated)  %> 
                    <% let month = (1 + dateCreated.getMonth()).toString(); %>
                    <% month = month.length > 1 ? month : '0' + month; %>
                    <% let day = dateCreated.getDate().toString(); %>
                    <% day = day.length > 1 ? day : '0' + day; %>
										<tr>
											<td><%- month + "/" + day + "/" + dateCreated.getFullYear() %> </td>
											<td><%- code.downline %> </td>
											<td>$ <%- code.referralCommission %> </td>
											<td>$ <%- code.paringCommission %> </td>
											<td>$ <%- code.miningIncome %> </td>
											<td>$ <%- code.networkBonus %> </td>
											<td>$ <%- code.grossIncome %> </td>
										</tr>  
									<% } %>  
								</tbody>
							</table>
						</div>
						<div class="card-footer clearfix">
							<ul class="pagination pagination-sm m-0 float-right">
								<% for(i=0; i < data.pages.length; i++) { %>
									<li class="page-item <%- data.pages[i].isActive ? 'active' : '' %> "><a class="page-link" href="/dashboard/mining?page=<%- data.pages[i].cnt %>"><%- data.pages[i].cnt %></a></li>
								<% } %>
							</ul>
						</div>
						<!-- /.card-body -->
					</div>
				</div>
      </div>
			<!-- /.row -->
    </div>
  </section>
</div>
<!-- /.content-wrapper -->
<%- include('../partials/footer') %>