			dateEnd: new Date(2020,4,16)
		};

		lib.countdown = () => {
			setInterval(() => {
				const countdownDate = (lib.dateEnd - new Date());
				const todayDate = new Date();
				lib.days.innerText = parseInt((lib.dateEnd - todayDate) / (1000 * 60 * 60 * 24));
				lib.hours.innerText = parseInt(Math.abs(lib.dateEnd - todayDate) / (1000 * 60 * 60) % 24);
				lib.minutes.innerText = parseInt(Math.abs(lib.dateEnd.getTime() - todayDate.getTime()) / (1000 * 60) % 60);
				lib.seconds.innerText = parseInt(Math.abs(lib.dateEnd.getTime() - todayDate.getTime()) / (1000) % 60); 
			},1000);
		};
		
