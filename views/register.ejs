<%- include('./partials/index-header') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container">
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header --> 
  <!-- Main content -->
  <section class="content" style="margin-top: 100px;">
    <div class="container-fluid">
      <div class="row justify-content-md-center">
        <div class="col-md-8 col-lg-5 col-xl-4">
          <div class="card">
            <div class="card-body register-card-body">
              <p class="login-box-msg">Register a new membership</p>
              <form action="/register" method="POST">
                <% if(typeof(message) === 'object' && typeof(message.firstname.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.firstname.error %> </span>
                <% } %>  
                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="firstname" placeholder="First name" required value="<%- typeof(message) === 'object' ? message.firstname.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-user"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.lastname.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.lastname.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="lastname" placeholder="Last name" required value="<%- typeof(message) === 'object' ? message.lastname.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-user"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.address.error) === 'string') { %>
                  <span lass="text-danger text-sm"><%- message.address.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="address" placeholder="Address" required value="<%- typeof(message) === 'object' ? message.address.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-user"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.referral.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.referral.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="text" class="form-control" name="referral" placeholder="Referral code" required value="<%- typeof(message) === 'object' ? message.referral.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-user"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.email.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.email.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="email" class="form-control" placeholder="Email" name="email" required value="<%- typeof(message) === 'object' ? message.email.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-envelope"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.password.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.password.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="password" class="form-control" name="password" placeholder="Password" required value="<%- typeof(message) === 'object' ? message.password.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                    </div>
                  </div>
                </div>
                <% if(typeof(message) == 'object' && typeof(message.password2.error) === 'string') { %>
                  <span class="text-danger text-sm"><%- message.password2.error %> </span>
                <% } %>
                <div class="input-group mb-3">
                  <input type="password" class="form-control" name="password2" placeholder="Retype password" required value="<%- typeof(message) === 'object' ? message.password2.value : ''  %>">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-8">
                    <% if(typeof(message) == 'object' && typeof(message.condition.error) === 'string') { %>
                      <span class="text-danger text-sm"><%- message.condition.error %> </span>
                    <% } %>
                    <div class="icheck-primary">
                      <input type="checkbox" id="agreeTerms" name="condition" value="agree">
                      <label for="agreeTerms">
                       I agree to the <a href="#">terms</a>
                      </label>
                    </div>
                  </div>
                  <!-- /.col -->
                  <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                  </div>
                  <!-- /.col -->
                </div>
              </form>
              <a href="/buycode" class="text-center">Buy referral code</a><br>
              <a href="/login" class="text-center">I already have a membership</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include('./partials/index-footer') %>